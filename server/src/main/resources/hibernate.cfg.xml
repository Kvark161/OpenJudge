<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>

        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>

        <property name="hibernate.connection.url">jdbc:postgresql://localhost:9000/openjudge</property>
        <property name="hibernate.connection.username">openjudge</property>
        <property name="hibernate.connection.password">openjudge</property>

        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>

        <property name="connection.useUnicode">true</property>
        <property name="connection.characterEncoding">utf-8</property>

        <mapping class="ru.openjudge.server.entity.User"/>

    </session-factory>
</hibernate-configuration>
